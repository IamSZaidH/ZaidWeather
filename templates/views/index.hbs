<!DOCTYPE html>
<html lang="en">
{{>links}}
<body>
    {{>navbar}}
    <!-- Main Header -->
    <div class="container-fluid main-header">
        <div class="row">
            <div class="col-md-10 col-12 mx-auto">
                <div class="row">
                    <!-- left header -->
                    <div class="col-md-6 main_header_left">
                        <P>Weather app</P>
                        <h1>Get leatest <span class="txt_clr">Weather</span> info</h1>
                        <a href="/weather"><button class="main_header_btn">Check now</button></a>
                    </div>
                    <!-- right header -->
                    <div class="col-md-6 main_header_right">
                        <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
                            <div class="carousel-inner">
                                <div class="carousel-item active">
                                    <img class="w-100 img-fluid" src="images/img1.jpg" alt="First slide" >
                                </div>
                                <div class="carousel-item">
                                    <img class="w-100 img-fluid" src="images/img2.jpg" alt="Second slide" >
                                </div>
                                <div class=" carousel-item ">
                                    <img class="w-100 img-fluid" src="images/img3.jpg" alt="Third slide">
                                </div>
                            </div>
                            <a class="carousel-control-prev" href="#carouselExampleControls" role="button"
                                data-slide="prev">
                                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                                <span class="sr-only">Previous</span>
                            </a>
                            <a class="carousel-control-next" href="#carouselExampleControls" role="button"
                                data-slide="next">
                                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                                <span class="sr-only">Next</span>
                            </a>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
        {{>footer}}

</body>

</html>